<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.home.HomeFragment">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_header" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2_slider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader" />

    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:dotsColor="@color/colorPrimaryDark"
        app:dotsCornerRadius="8dp"
        app:dotsSize="10dp"
        app:dotsSpacing="2dp"
        app:dotsWidthFactor="2.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vp2_slider"
        app:progressMode="true"
        app:selectedDotColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/btn_view_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="More"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dots_indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dots_indicator" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_view_all">

        <TextView
            android:id="@+id/tvWelcomeUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/text_welcome_user"
            android:textSize="@dimen/_24ssp" />

        <TableLayout
            android:id="@+id/userTable"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_12sdp"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    style="@style/TextDefault"
                    android:text="ID" />

                <TextView
                    android:id="@+id/tvID"
                    style="@style/TextDefault"
                    tools:text="0" />

            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TextDefault"
                    android:text="Name" />

                <TextView
                    android:id="@+id/tvName"
                    style="@style/TextDefault"
                    tools:text="John Doe" />

            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TextDefault"
                    android:text="Email" />

                <TextView
                    android:id="@+id/tvEmail"
                    style="@style/TextDefault"
                    tools:text="example@mail.com" />

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/btnLogout"
            style="@style/ButtonPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="@string/text_logout" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>